// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Subscription Plans
enum PlanType {
  FREE
  MERCHANT
}

// User Roles
enum UserRole {
  TENANT_OWNER     // مالك المستأجر
  COMPANY_MANAGER  // مدير الشركة
  BRANCH_MANAGER   // مدير الفرع
  SUPERVISOR       // مشرف
  EMPLOYEE         // موظف
}

model Tenant {
  id              String        @id @default(cuid())
  name            String
  email           String        @unique
  phone           String?
  businessName    String?       // اسم النشاط التجاري
  businessLicense String?       // السجل التجاري
  isActive        Boolean       @default(true)
  
  // Subscription
  plan            PlanType      @default(FREE)
  subscriptionEnd DateTime?     // تاريخ نهاية الاشتراك
  
  // Relations
  users           User[]
  companies       Company[]
  partners        Partner[]
  wallets         Wallet[]
  categories      Category[]
  transactions    Transaction[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([email])
}

model User {
  id          String      @id @default(cuid())
  email       String      @unique
  name        String?
  phone       String?
  password    String?     // للتوثيق
  
  // Role & Permissions
  role        UserRole    @default(EMPLOYEE)
  isActive    Boolean     @default(true)
  
  // Tenant & Company Branch
  tenantId    String
  tenant      Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  companyId   String?
  company     Company?    @relation(fields: [companyId], references: [id], onDelete: SetNull)
  
  branchId    String?
  branch      Branch?     @relation(fields: [branchId], references: [id], onDelete: SetNull)
  
  transactions Transaction[] // المعاملات التي قام بها المستخدم
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([tenantId])
  @@index([companyId])
  @@index([branchId])
}

model Company {
  id          String      @id @default(cuid())
  name        String
  description String?
  taxId       String?     // الرقم الضريبي
  isActive    Boolean     @default(true)
  
  // Tenant Ownership
  tenantId    String
  tenant      Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Relations
  branches    Branch[]
  users       User[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([tenantId])
}

model Branch {
  id          String      @id @default(cuid())
  name        String
  address     String?
  phone       String?
  isActive    Boolean     @default(true)
  
  // Company Ownership
  companyId   String
  company     Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Relations
  users       User[]
  wallets     Wallet[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([companyId])
}

model Partner {
  id          String      @id @default(cuid())
  name        String
  email       String?
  phone       String?
  company     String?     // شركة الشريك
  role        String?     // دور الشريك
  notes       String?     // ملاحظات
  isActive    Boolean     @default(true)
  
  // Tenant Ownership
  tenantId    String
  tenant      Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([tenantId])
}

model Wallet {
  id            String        @id @default(cuid())
  name          String
  description   String?
  balance       Float         @default(0)
  currency      String        @default("USD")
  type          String        @default("general") // general, savings, investment, credit
  icon          String        @default("wallet")
  color         String        @default("primary")
  isActive      Boolean       @default(true)
  
  // Tenant Ownership
  tenantId      String
  tenant        Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Branch Assignment (اختياري - يمكن أن يكون على مستوى المستأجر مباشرة)
  branchId      String?
  branch        Branch?       @relation(fields: [branchId], references: [id], onDelete: SetNull)
  
  transactions  Transaction[]
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([tenantId])
  @@index([branchId])
}

model Category {
  id            String        @id @default(cuid())
  name          String
  description   String?
  type          String        // income, expense
  icon          String?
  color         String?
  isActive      Boolean       @default(true)
  
  // Tenant Ownership
  tenantId      String
  tenant        Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  transactions  Transaction[]
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([tenantId])
}

model Transaction {
  id            String      @id @default(cuid())
  title         String
  description   String?
  amount        Float
  type          String      // income, expense
  date          DateTime    @default(now())
  status        String      @default("completed") // pending, completed, cancelled
  tags          String?     // comma-separated tags
  
  // Tenant Ownership
  tenantId      String
  tenant        Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  // Wallet Reference
  walletId      String
  wallet        Wallet      @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  // Category Reference
  categoryId    String?
  category      Category?   @relation(fields: [categoryId], references: [id])
  
  // User who created the transaction
  createdById   String?
  createdBy     User?       @relation(fields: [createdById], references: [id], onDelete: SetNull)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([tenantId])
  @@index([walletId])
  @@index([date])
}
