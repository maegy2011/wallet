generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  username        String   @unique
  email           String?  @unique
  phone           String   @unique
  nationalId      String   @unique
  password        String
  isActive        Boolean  @default(true)
  isEmailVerified Boolean  @default(false)
  isPhoneVerified Boolean  @default(false)
  lastLoginAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  userBusinessAccounts UserBusinessAccount[]
  userBranches         UserBranch[]
  userRoles            UserRole[]
  userSessions         UserSession[]
  passwordResets       PasswordReset[]
  
  @@map("users")
}

model BusinessAccount {
  id              String   @id @default(cuid())
  name            String
  description     String?
  commercialId    String?  @unique
  taxId           String?  @unique
  address         String?
  phone           String
  email           String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  branches        Branch[]
  userBusinessAccounts UserBusinessAccount[]
  userRoles       UserRole[]
  
  @@map("business_accounts")
}

model Branch {
  id              String   @id @default(cuid())
  businessAccountId String
  name            String
  address         String?
  phone           String?
  email           String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  businessAccount BusinessAccount @relation(fields: [businessAccountId], references: [id], onDelete: Cascade)
  userBranches    UserBranch[]
  userRoles       UserRole[]
  
  @@map("branches")
}

model Role {
  id              String   @id @default(cuid())
  name            String   @unique
  description     String?
  permissions     String   // JSON string of permissions
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  userRoles       UserRole[]
  
  @@map("roles")
}

model UserRole {
  id              String   @id @default(cuid())
  userId          String
  roleId          String
  businessAccountId String?
  branchId        String?
  isActive        Boolean  @default(true)
  assignedAt      DateTime @default(now())
  assignedBy      String?
  
  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role            Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  businessAccount BusinessAccount? @relation(fields: [businessAccountId], references: [id], onDelete: Cascade)
  branch          Branch? @relation(fields: [branchId], references: [id], onDelete: Cascade)
  
  @@unique([userId, roleId, businessAccountId, branchId])
  @@map("user_roles")
}

model UserBusinessAccount {
  id              String   @id @default(cuid())
  userId          String
  businessAccountId String
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  
  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  businessAccount BusinessAccount @relation(fields: [businessAccountId], references: [id], onDelete: Cascade)
  
  @@unique([userId, businessAccountId])
  @@map("user_business_accounts")
}

model UserBranch {
  id              String   @id @default(cuid())
  userId          String
  branchId        String
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  
  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  branch          Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  
  @@unique([userId, branchId])
  @@map("user_branches")
}

model UserSession {
  id              String   @id @default(cuid())
  userId          String
  token           String   @unique
  refreshToken    String?  @unique
  ipAddress       String?
  userAgent       String?
  isActive        Boolean  @default(true)
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_sessions")
}

model PasswordReset {
  id              String   @id @default(cuid())
  userId          String
  token           String   @unique
  isUsed          Boolean  @default(false)
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  
  // Relations
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("password_resets")
}

model Wallet {
  id              String   @id @default(cuid())
  uuid            String   @unique @default(uuid())
  name            String
  mobileNumber    String   @unique
  logo            String?
  balance         Float    @default(0)
  totalDeposits   Float    @default(0)
  totalWithdrawals Float   @default(0)
  monthlyTransactions Float @default(0)
  monthlyLimit    Float    @default(200000) // Dynamic monthly limit per wallet
  dailyLimit      Float    @default(60000) // Dynamic daily limit per wallet
  minBalanceAlert Float    @default(1000) // Minimum balance alert threshold
  feeType         String   @default("percentage") // 'percentage', 'perThousand', 'fixed'
  feePercentage   Float    @default(0) // Percentage fee (e.g., 2.5 for 2.5%)
  feePerThousand  Float    @default(0) // Fee amount per 1000 EGP (e.g., 5 for 5 EGP per 1000)
  maxFeeAmount    Float    @default(0) // Maximum fee amount in Egyptian Pounds
  minFeeAmount    Float    @default(0) // Minimum fee amount in Egyptian Pounds
  totalFeesEarned Float    @default(0) // Total fees earned by merchant
  isArchived      Boolean  @default(false) // Soft delete flag
  archivedAt      DateTime? // Archive timestamp
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  transactions    Transaction[]
  expenses        Expense[]
  transfersFrom   Transfer[] @relation("TransferFrom")
  transfersTo     Transfer[] @relation("TransferTo")
  reports         Report[]
}

model Transaction {
  id                  String   @id @default(cuid())
  walletId            String
  type                String   // 'deposit', 'withdrawal', 'transfer'
  amount              Float
  feeAmount           Float    @default(0) // Fee charged for this transaction
  description         String
  date                DateTime @default(now())
  createdAt           DateTime @default(now())
  cashTreasuryCoverage Float  @default(0) // Amount covered by cash treasury (0 = full amount, >0 = partial coverage)
  isFullyCovered      Boolean @default(true) // true = fully covered by cash treasury, false = partially covered
  
  wallet              Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model Expense {
  id              String   @id @default(cuid())
  walletId        String
  category        String   // 'rent', 'bills', 'food', 'personal', 'other'
  amount          Float
  description     String
  date            DateTime @default(now())
  createdAt       DateTime @default(now())
  
  wallet          Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model CashTreasury {
  id              String   @id @default(cuid())
  balance         Float    @default(0)
  totalDeposits   Float    @default(0)
  totalWithdrawals Float   @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  transactions    CashTreasuryTransaction[]
  transfers       Transfer[]
}

model CashTreasuryTransaction {
  id              String   @id @default(cuid())
  type            String   // 'deposit', 'withdrawal', 'transfer_in', 'transfer_out'
  amount          Float
  description     String
  referenceId     String?  // Reference to wallet ID for transfers
  date            DateTime @default(now())
  createdAt       DateTime @default(now())
  
  cashTreasury    CashTreasury @relation(fields: [cashTreasuryId], references: [id], onDelete: Cascade)
  cashTreasuryId  String
}

model Transfer {
  id              String   @id @default(cuid())
  fromWalletId    String?
  toWalletId      String?
  fromCashTreasury Boolean @default(false)
  toCashTreasury  Boolean @default(false)
  amount          Float
  description     String
  date            DateTime @default(now())
  createdAt       DateTime @default(now())
  
  fromWallet      Wallet?       @relation("TransferFrom", fields: [fromWalletId], references: [id], onDelete: Cascade)
  toWallet        Wallet?       @relation("TransferTo", fields: [toWalletId], references: [id], onDelete: Cascade)
  cashTreasury    CashTreasury  @relation(fields: [cashTreasuryId], references: [id], onDelete: Cascade)
  cashTreasuryId  String
}

model Settings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Report {
  id              String   @id @default(cuid())
  walletId        String
  type            String   // 'daily', 'weekly', 'monthly', 'quarterly', 'yearly'
  period          String   // JSON string containing period details (date, quarter, year, etc.)
  data            String   // JSON string containing the report data
  generatedAt     DateTime @default(now())
  
  wallet          Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
}